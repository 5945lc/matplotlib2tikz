from PIL import Image
#import imagehash
import phash
import argparse

def _main():
    filename = _parse_options()
    #phash = imagehash.phash(Image.open(filename)).__str__()
    h = phash.phash(Image.open(filename))
    print(h)
    return

def _parse_options():
    '''Parse input options.
    '''
    parser = argparse.ArgumentParser(
            description='Compute perceptual hash (pHash) of image.'
            )
    parser.add_argument(
            'file',
            metavar='FILE',
            type=str,
            help='file to compute the phash of'
            )
    args = parser.parse_args()
    return args.file

if __name__ == '__main__':
    _main()
